
<div class="new">
<div class="toukou">
<h1>新規投稿</h1>

<h3>あなたの勉強法を投稿して、みんなで共有しよう</h3>
</div>
<%= form_for @subjects do |f| %>

    <div class="field">
    <%= f.label :カテゴリー  %>
    <%= f.select :name, 
    [["国語", "国語"], 
    ["数学", "数学"], 
    ["理科", "理科"],
    ["英語", "英語"],
    ["社会", "社会"],
    ["その他", "その他"],], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :教科名  %>
    <%= f.text_area :name2, :size => "30x2" %>
  </div>


  <div class="field">
    <%= f.label :方法  %>
    <%= f.text_area :contents, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :学年 %>
    <%= f.text_field :grade, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>


  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", subjects_path %>


</div>


