<h1>(自分の題名)</h1>
<h3>編集ページ</h3>
<%= form_for @subjects do |f| %>

    <div class="field">
    <%= f.label :教科名  %>
    <%= f.select :name, 
    [["国語", "国語"], 
    ["数学", "数学"], 
    ["理科", "理科"],
    ["外国語", "外国語"],
    ["社会", "社会"],
    ["その他", "その他"],], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :方法  %>
    <%= f.text_area :contents, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :学年 %>
    <%= f.text_field :grade, :size => 30 %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", subjects_path %>